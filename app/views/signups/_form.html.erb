<% if flash[:errors] %>
    <h3>We've encountered the following issues with signup:</h3>
    <ul>
        <% flash[:errors].each do |msg|%>
           <li> <%= msg %> </li>
        <% end%>
    </ul>
<% end %>

<%= form_for @signup do |f| %>
    <%= f.label :camper_id %>
    <%= f.collection_select :camper_id, Camper.all, :id, :name %>
    
    <%= f.label :activity_id %>
    <%= f.collection_select :activity_id, Activity.all, :id, :name %>

    <%= f.label :time %>
    <%= f.number_field :time %>

    <%= f.submit %>
<% end %>